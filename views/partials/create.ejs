<div ng-include="'partials/nav'"></div>
<div id="content-wrap">
  <form name="req_form" ng-submit="submitRequest(request_form.$valid)" novalidate>
    <div class="form-group">
      <label for="title">Request</label>
      <input name="title" ng-required="true" ng-model="request_form.title" type="text" class="form-control" id="title" placeholder="Mow the lawn">
      <p ng-show="req_form.title.$invalid && !req_form.title.$pristine" class="help-block">This field is required.</p>
    </div>
    <div class="form-group">
      <label for="price">Starting Price</label>
      <input ng-model="request_form.price" type="text" class="form-control" id="price" placeholder="$1.00">
    </div>
    <div class="form-group">
      <label for="completed_by">Complete By</label>
      <input ng-model="request_form.completed_by" type="datetime" class="form-control" id="completed_by" placeholder="6:30 PM">
    </div>
    <div class="form-group">
      <label for="location">Location</label>
      <input ng-model="request_form.location" type="text" class="form-control" id="location" placeholder="314 Chestnut Street, Philadelphia">
    </div>
    <div class="form-group">
      <label for="description">Description</label>
      <textarea ng-model="request_form.description" class="form-control" rows="5" id="description" placeholder="Please provide your own lawnmower. Watch out for the low branches at the edge of the backyard!"></textarea>
    </div>
    <div class="form-group">
      <label for="tags">Tags</label>
      <input ng-model="request_form.tags" type="text" id="tags" class="form-control" data-role="tagsinput" />
    </div>
    <button ng-click="submitRequest()" ng-disabled="request_form.$invalid" type="submit" class="btn btn-default">Add Request</button>
  </form>
</div>
<script src="/js/bootstrap-tagsinput.js"></script>